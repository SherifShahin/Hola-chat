<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FAFAFA"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/send_image"
          android:layout_width="240dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="5dp"
          android:layout_alignParentTop="true"
          android:layout_toRightOf="@+id/message_single_profile"
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true" />


      <ImageView
          android:id="@+id/send_video"
          android:layout_width="50dp"
          android:layout_height="40dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@+id/message_single_profile"
          android:src="@android:drawable/presence_video_away" />


<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@mipmap/profile"
    android:id="@+id/message_single_profile"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/message_single_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background"
        android:padding="20dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/message_single_profile"
        android:layout_toEndOf="@+id/message_single_profile" />



  </RelativeLayout>

   </LinearLayout>
</RelativeLayout>